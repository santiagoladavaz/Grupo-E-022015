<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field"
	default-cascade="save-update">
	<class name="model.Player" table="PLAYER">
		<id column="PID" name="id">
			<generator class="identity" />
		</id>
		<property name="realTeam" type="string" column="REALTEAM"/>		
		<property name="name" type="java.lang.String" column="name"/>
		<many-to-one name="team" class="model.Team" column="TEAM" lazy="false"/>
		<many-to-one name="position" class="model.Position" column="POSITIONID" lazy="false"/>
	</class>	
</hibernate-mapping>